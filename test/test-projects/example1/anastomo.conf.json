{
  "pipelines": [
    {
      "name": "legacy",
      "description": "Legacy JS build",
      "buildCommand": "mkdir -p public/js && cp resources/assets/js/old.js public/js/",
      "packageJson": "package.legacy.json",
      "packageLock": "package-lock.legacy.json",
      "nodeVersion": "lts/gallium",
      "src": [
        "resources/assets/js/old.js"
      ],
      "configFiles": {
        "tailwind.config.js": "tailwind.config.legacy.js"
      },
      "artifacts": [
        "public/js/old.js"
      ]
    },
    {
      "name": "modern",
      "description": "Modern JS build",
      "buildCommand": "mkdir -p public/js && cp resources/assets/js/new.js public/js/ && mkdir -p public/css && cp resources/assets/css/app.css public/css/",
      "nodeVersion": "lts/iron",
      "src": [
        "resources/assets/js/new.js",
        "resources/assets/css/static.css"
      ],
      "configFiles": {
        "tailwind.config.js": "tailwind.config.js"
      },
      "prePathMap": {
        "resources/assets/css/static.css": "resources/assets/css/app.css"
      },
      "artifacts": [
        "public/js/new.js",
        "public/css/app.css"
      ]
    },
    {
      "name": "static",
      "description": "Static files that do not go through a build process",
      "src": [
        "resources/assets/css/"
      ],
      "pathMap": {
        "resources/assets/css/": "public/css/"
      },
      "artifacts": [
        "public/css/"
      ]
    }
  ]
}
